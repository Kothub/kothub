<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="gitlin.kothub.ui.repo.RepositoryActivity"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppToolbar"
        android:fitsSystemWindows="true">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginStart="48dp"
        app:expandedTitleMarginEnd="64dp"
        android:fitsSystemWindows="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_collapseMode="parallax">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ownerPicture"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_collapseMode="parallax"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />

            <TextView
                android:id="@+id/nameWithOwner"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ownerPicture"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <gitlin.kothub.view.CircleView
                android:id="@+id/languageColor"
                android:layout_width="27dp"
                android:layout_height="23dp"
                app:radius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="64dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" />


            <TextView
                android:id="@+id/languageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Typescript"
                app:layout_constraintStart_toEndOf="@+id/languageColor"
                app:layout_constraintHorizontal_bias="0.076"
                app:layout_constraintEnd_toStartOf="@+id/stargazersIcon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"></TextView>

            <com.mikepenz.iconics.view.IconicsImageView
                android:id="@+id/stargazersIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:iiv_color="@android:color/white"
                app:iiv_icon="oct_star"
                app:layout_constraintTop_toTopOf="@+id/stargazers"
                app:layout_constraintBottom_toBottomOf="@+id/stargazers"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="248dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/stargazers" />

            <TextView
                android:id="@+id/stargazers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                tools:text="140"
                tools:layout_editor_absoluteX="275dp"
                app:layout_constraintTop_toTopOf="@+id/forksIcon"
                app:layout_constraintBottom_toBottomOf="@+id/forksIcon"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/stargazersIcon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/forksIcon"></TextView>

            <com.mikepenz.iconics.view.IconicsImageView
                android:id="@+id/forksIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:iiv_color="@android:color/white"
                app:iiv_icon="oct_repo_forked"
                tools:layout_editor_absoluteX="318dp"
                app:layout_constraintTop_toTopOf="@+id/forks"
                app:layout_constraintBottom_toBottomOf="@+id/forks"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/stargazers"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/forks" />

            <TextView
                android:id="@+id/forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                tools:text="168"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/forksIcon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"></TextView>


        </android.support.constraint.ConstraintLayout>



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"/>

    </android.support.design.widget.CollapsingToolbarLayout>


</android.support.design.widget.AppBarLayout>

    <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/viewpager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--/>-->


    <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/repository_tabs"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:layout_scrollFlags="enterAlways"-->
            <!--app:tabGravity="center"-->
            <!--app:layout_gravity="top"-->
            <!--app:tabMode="fixed"-->
            <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
            <!--/>-->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <TextView
            android:id="@+id/readme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            tools:text="@string/lorem_ipsum" />

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/FabStyle"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@android:drawable/ic_menu_share" />


</android.support.design.widget.CoordinatorLayout>