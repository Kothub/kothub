        app:layout_constraintStart_toEndOf="@+id/watchers"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/stargazers"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />



    <TextView
    android:id="@+id/stargazers"
    android:layout_width="27dp"
    android:layout_height="wrap_content"
    android:textSize="16dip"
    tools:text="140"
    app:layout_constraintEnd_toStartOf="@+id/forksIcon"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toEndOf="@+id/stargazersIcon"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintTop_toTopOf="@+id/guideline"
